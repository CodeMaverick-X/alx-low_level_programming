#make_file

CC= gcc
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME= school
RM= rm
CFLAGS= -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)


%.o: %.c
	$(CC) $(CFLAGS) -c -o $@  $<


clean:
	$(RM) -f *.swp *.~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *.swp *.~ $(OBJ)

re: oclean all
